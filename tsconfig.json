{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    // aliases for paths in tsconfig.json
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"]
    },

    // type definitions for astro and auto-imports
    "types": ["astro/client", "./src/types/*.d.ts"],
    
    // type checking options
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true
  }
}