---
import SiteLayout from '@layouts/SiteLayout.astro'
import ExceptionalFaculty from '@components/ExceptionalFaculty.vapor.vue'
import { Image } from 'astro:assets'

import facultyImageA from '@assets/images/premanand_ghadekar.png'
import facultyImageB from '@assets/images/deepali_deshpande.png'
import facultyImageC from '@assets/images/priyadarshan_dhabe.png'
import Icon from '@components/Icon.vapor.vue'
---

<SiteLayout navColor="light">
  <div class="home flex items-center justify-center w-full h-[98%]">
    <div
      class="w-full px-80 flex flex-col items-center justify-center font-heading text-white"
    >
      <h1 class="text-[12rem]">Department of IT</h1>
      <h6 class="text-3xl w-1/2 text-center">
        To provide student-centered state-of-the-art academically enriched
        environment for productive careers in the world of computing through
        creativity and innovation
      </h6>
    </div>
  </div>
  <div class="w-full exceptional-faculty relative">
    <div
      class="exceptional-faculty-header
    flex items-center justify-between
    px-80 py-12
    bg-black/90
    font-heading text-white"
    >
      <span class="text-8xl"> Exceptional Faculty</span>
      <span class="text-2xl font-text">Fuck it</span>
    </div>

    <ExceptionalFaculty client:visible>
      <Image
        slot="faculty-image-a"
        src={facultyImageA}
        alt="Prof. Dr. Premanand Ghadekar"
      />
      <Image
        slot="faculty-image-b"
        src={facultyImageB}
        alt="Prof. Deepali Deshpande"
      />

      <Image
        slot="faculty-image-c"
        src={facultyImageC}
        alt="Prof. Dr. Priyadarshan Dhabe"
      />
      <Icon name="chevron-left" class="w-8" slot="icon-prev" />
      <Icon name="chevron-right" class="w-8" slot="icon-next" />
    </ExceptionalFaculty>
  </div>
</SiteLayout>

<style lang="stylus">
  opacity = 0.5
  lingrad_1  = linear-gradient(to bottom, rgba(#000, opacity), rgba(#000, opacity))
  lingrad_2 = linear-gradient(to bottom, rgba(#000, 0), rgba(#000, 0), rgba(#000, 0.9))

  .home
    background-image lingrad_1, lingrad_2, url('../assets/images/hero.jpg')
    background-repeat no-repeat
    background-size 100%
    background-position center

</style>
