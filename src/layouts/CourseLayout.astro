---
import '../stylus/base.styl'
import Navbar from './Navbar.astro'
import Footer from './Footer.astro'
import { navTheme, smallNavTheme } from '@store/menu'

const title = `Academics - ${Astro.props.courseName || 'Course'}`
navTheme.set(Astro.props.navTheme || 'light')
smallNavTheme.set(Astro.props.smallNavTheme || 'light')
---

<script>
  import { navTheme } from '@store/menu'
  navTheme.set(document.body.dataset.navTheme)
  smallNavTheme.set(document.body.dataset.smallNavTheme)
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>

  <body
    data-nav-theme={Astro.props.navTheme || 'light'}
    data-small-nav-theme={Astro.props.smallNavTheme || 'light'}
  >
    <Navbar />

    <main
      class="mx-auto w-[60%] min-h-screen grid grid-cols-[2fr_1fr] py-60 z-0"
    >
      <div class="course-intro w-full px-28">
        <slot name="content" />
      </div>

      <aside class="course-summary rounded-xl">
        <slot name="summary" />
      </aside>
    </main>
    <Footer />
  </body>
</html>
